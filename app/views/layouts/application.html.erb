<!DOCTYPE html>
<html>
  <head>
    <title>OriginalApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to "Punctualities list", punctualities_path %>
      <%= link_to 'New punctuality', new_punctuality_path, class: "link" %>
      <%= link_to "Plaints", plaints_path %>
      <%= link_to 'Account', user_path(current_user.id), class: "link" %> 
      <%= link_to "Log out", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "sign up", new_user_registration_path %>
      <%= link_to "Login", new_user_session_path %>
    <% end %>

    <% if notice %>
    <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
    <p class="alert alert-error"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
