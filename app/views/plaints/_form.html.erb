<%= form_with(model: @plaint, local: true ) do |form| %>
  <% if @plaint.errors.any? %>
    <div id="error_explanation">
      <h2><%= @plaint.errors.count %>Something wrong</h2>
      <ul>
      <% @plaint.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 <div class="form">  
  <div class="plaint_title form-group">
    <%= form.label :plaint_title %>
    <%= form.text_field :title, id: "plaint" , placeholder: "Title...", class: "form-control"%>
  </div>
  
  <div class="plaint_title form-group">
    <%= form.label :Description %>
    <%= form.text_field :description, id: "description", placeholder: "Description...", class: "form-control" %>
  </div> 
  <div class="plaint_title form-group">
    <%= form.label :Remarks %>
    <%= form.text_area :remarks, id: "deadline", placeholder: "Remarks...", class: "form-control"%>
  </div>
    <%= form.label :Category %>
    <br>
    <% Category.all.each do |category| %>
    <%= form.check_box :category_ids, { multiple: true, checked: category[:checked], disabled: category[:disabled], include_hidden: false }, category[:id] %>
    <%= form.label :category_ids, category.name, value: "#{category.id}" %>
  <% end %>
  <br>
  <%= form.submit value:"Register", class: "btn btn-primary submit"%>
</div>
<% end %>
<br>
<%= link_to "Back to the plaint list", plaints_path, class: "badge badge-success" %>